{%  function block.content() %}
<h1>Pages relating to '{%& tag %}'</h1>
{% local tag_count = vars.get_tag_count(tag) %}
<p>
{% if tag_count > 1 then %}
  We have found {%& tag_count %} pages with tag '{%& tag %}'
{% elseif tag_count == 1 then %}
  We have found 1 page with tag '{%& tag %}'
{% else %}
  No pages with '{%& tag %}' have been found!
</p>
{% end %}
<div id="pages">
{% local data = vars.load_images_by_tag(tag) %}
<div id="page">
{% for i = 1, #data do %}
  {% local row = data[i] %}
  {% block.new_page(row.png) %}
  <div id="pagemeta">Page {%& row.page %} from {%& row.id %}</div>
{% end %}
</div>
{% end %}

{% render('base', {current_page="tags"}) %}
